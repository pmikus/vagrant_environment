{
    "builders": [{
        "boot_command": [
           "<tab> ",
           "text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed` }}",
           "<enter><wait>"
        ],
        "boot_wait": "5s",
        "disk_size": "{{ user `disk_size` }}",
        "guest_os_type": "{{ user `virtualbox_guest_os_type` }}",
        "hard_drive_interface": "sata",
        "headless": "{{ user `headless` }}",
        "http_directory": "http",
        "iso_checksum": "{{ user `iso_checksum` }}",
        "iso_checksum_type": "{{ user `iso_checksum_type` }}",
        "iso_urls": [
            "{{ user `iso_path` }}/{{ user `iso_name` }}",
            "{{ user `iso_url` }}"
        ],
        "output_directory": "{{ user `vm_name` }}-virtualbox-iso",
        "shutdown_command": "echo '{{ user `ssh_password` }}' | sudo -S shutdown -P now",
        "ssh_password": "{{ user `ssh_password` }}",
        "ssh_username": "{{ user `ssh_username` }}",
        "ssh_wait_timeout": "10000s",
        "type": "virtualbox-iso",
        "vboxmanage": [
            ["modifyvm", "{{ .Name }}", "--memory", "{{ user `memory` }}"],
            ["modifyvm", "{{ .Name }}", "--cpus", "{{ user `cpus` }}"]
        ],
        "virtualbox_version_file": ".vbox_version",
        "vm_name": "{{ user `vm_name` }}"
    }],
    "post-processors": [{
        "compression_level": "{{ user `compression_level` }}",
        "keep_input_artifact": false,
        "output": "box/{{ .Provider }}/{{ user `vm_name` }}-{{ user `version` }}.box",
        "type": "vagrant"
    }],
    "provisioners": [{
        "environment_vars": [
            "DEBIAN_FRONTEND=noninteractive",
            "UPDATE={{ user `update` }}",
            "DISABLE_IPV6={{ user `disable_ipv6` }}",
            "SSH_USERNAME={{ user `ssh_username` }}",
            "SSH_PASSWORD={{ user `ssh_password` }}",
            "http_proxy={{ user `http_proxy` }}",
            "https_proxy={{ user `https_proxy` }}",
            "no_proxy={{ user `no_proxy` }}"
        ],
        "execute_command": "echo '{{ user `ssh_password` }}' | {{ .Vars }} sudo -E -S bash -x '{{ .Path }}'",
        "expect_disconnect": true,
        "scripts": [
            "script/vagrant.sh",
            "script/minimize.sh",
            "script/cleanup.sh"
        ],
        "type": "shell"
    }],
    "variables": {
        "compression_level": "6",
        "cpus": "4",
        "disable_ipv6": "false",
        "disk_size": "20480",
        "headless": "false",
        "hostname": "centos8",
        "http_proxy": "{{ env `http_proxy` }}",
        "https_proxy": "{{ env `https_proxy` }}",
        "iso_checksum": "7fea13202bf2f26989df4175aace8fdc16e1137f7961c33512cbfad844008948",
        "iso_checksum_type": "sha256",
        "iso_name": "CentOS-8.1.1911-x86_64-boot.iso",
        "iso_path": "iso",
        "iso_url": "http://merlin.fit.vutbr.cz/mirrors/centos/8.1.1911/isos/x86_64/CentOS-8.1.1911-x86_64-boot.iso",
        "memory": "4096",
        "no_proxy": "{{ env `no_proxy` }}",
        "preseed": "centos-8-1911-desktop-x86_64.cfg",
        "ssh_fullname": "vagrant",
        "ssh_password": "vagrant",
        "ssh_username": "vagrant",
        "update": "true",
        "version": "0.1",
        "virtualbox_guest_os_type": "RedHat_64",
        "vm_name": "centoa-8-1911-desktop-x86_64"
    }
}
