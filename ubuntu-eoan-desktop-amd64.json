{
    "_comment": "Build with `packer build ubuntu-eoan-desktop-amd64.json`",
    "builders": [{
        "boot_command": [
           "<tab>",
           "/install/vmlinuz ",
           "initrd=/install/initrd.gz ",
           "auto-install/enable=true ",
           "debconf/priority=critical ",
           "preseed/url=http://{ {.HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed` }} ",
           "<enter>"
        ],
        "boot_wait": "5s",
        "disk_size": "{{ user `disk_size` }}",
        "guest_os_type": "{{ user `virtualbox_guest_os_type` }}",
        "hard_drive_interface": "sata",
        "headless": "{{ user `headless` }}",
        "http_directory": "http",
        "iso_checksum": "{{ user `iso_checksum` }}",
        "iso_checksum_type": "{{ user `iso_checksum_type` }}",
        "iso_urls": [
            "{{ user `iso_path` }}/{{ user `iso_name` }}",
            "{{ user `iso_url` }}"
        ],
        "output_directory": "{{ user `vm_name` }}-virtualbox-iso",
        "shutdown_command": "echo '{{ user `ssh_password` }}' | sudo -S shutdown -P now",
        "ssh_password": "{{ user `ssh_password` }}",
        "ssh_username": "{{ user `ssh_username` }}",
        "ssh_wait_timeout": "10000s",
        "type": "virtualbox-iso",
        "vboxmanage": [
            ["modifyvm", "{{ .Name }}", "--memory", "{{ user `memory` }}"],
            ["modifyvm", "{{ .Name }}", "--cpus", "{{ user `cpus` }}"]
        ],
        "virtualbox_version_file": ".vbox_version",
        "vm_name": "{{ user `vm_name` }}"
    }],
    "post-processors": [{
        "compression_level": "{{ user `compression_level` }}",
        "keep_input_artifact": false,
        "output": "box/{{ .Provider }}/{{ user `vm_name` }}-{{ user `version` }}.box",
        "type": "vagrant"
    }],
    "provisioners": [{
        "environment_vars": [
            "DEBIAN_FRONTEND=noninteractive",
            "UPDATE={{ user `update` }}",
            "DISABLE_IPV6={{ user `disable_ipv6` }}",
            "SSH_USERNAME={{ user `ssh_username` }}",
            "SSH_PASSWORD={{ user `ssh_password` }}",
            "http_proxy={{ user `http_proxy` }}",
            "https_proxy={{ user `https_proxy` }}",
            "no_proxy={{ user `no_proxy` }}"
        ],
        "execute_command": "echo '{{ user `ssh_password` }}' | {{ .Vars }} sudo -E -S bash -x '{{ .Path }}'",
        "expect_disconnect": true,
        "scripts": [
            "script/vagrant.sh",
            "script/minimize.sh",
            "script/cleanup.sh"
        ],
        "type": "shell"
    }],
    "variables": {
        "compression_level": "6",
        "cpus": "4",
        "disable_ipv6": "false",
        "disk_size": "20480",
        "headless": "false",
        "hostname": "eoan",
        "http_proxy": "{{ env `http_proxy` }}",
        "https_proxy": "{{ env `https_proxy` }}",
        "iso_checksum": "03d3ec50bce69eb13a406ac2cf8a4c3cb2b2e1fa58d257ea4f366469cbf091eb",
        "iso_checksum_type": "sha256",
        "iso_name": "ubuntu-eoan-mini-amd64.iso",
        "iso_path": "iso",
        "iso_url": "http://archive.ubuntu.com/ubuntu/dists/eoan/main/installer-amd64/current/images/netboot/mini.iso",
        "memory": "4096",
        "no_proxy": "{{ env `no_proxy` }}",
        "preseed": "ubuntu-eoan-desktop-amd64.cfg",
        "ssh_fullname": "vagrant",
        "ssh_password": "vagrant",
        "ssh_username": "vagrant",
        "update": "true",
        "version": "0.1",
        "virtualbox_guest_os_type": "Ubuntu_64",
        "vm_name": "ubuntu-eoan-desktop-amd64"
    }
}
